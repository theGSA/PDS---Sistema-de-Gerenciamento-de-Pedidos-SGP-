<div id="pageContent" style="overflow: hidden; height: 100%;">
<div id="header" class="container-barra-pesquisa mb-2" >
    <h3 class="text-orangered">Pedidos</h3>
    <div class="container-search-cart">
        <!-- <input class="form-control input-buscar" placeholder="buscar cliente"> -->
        <!-- <button class="btn btn-primary" onclick="ShowModalByPost(this,'Cliente/GetEditModal')">Novo</button> -->
    </div>
</div>

<% 
if(Pedidos && Pedidos.length> 0) {%>
    <div id="content" class="tableWrap">
        <table class="mt-2">
        <thead>
            <th>Id</th>
            <th>Cliente</th>
            <th class="d-none d-md-table-cell">Status</th>
            <th>Ações</th>
        </thead>
        <tbody>
            <% Pedidos.forEach(element=> {%>
                <tr>
                    <td>
                        <%= element.Id.toString().padStart(5, '0') %>
                    </td>
                    <td  id="item_name_<%=element.Id %>">
                        <%= element.Usuario?.Nome %>
                    </td>
                    <td class="d-none d-md-table-cell" style="white-space: nowrap; overflow: hidden; max-height: 50px !important; text-overflow: ellipsis;">
                        <%= element.strStatus %>
                    </td>
                    <td >
                        <i class="bi-pen btn text-primary" onclick="ShowModalByPost(this,'Pedido/GetEditModal', '<%= element.Id %>')"></i>
                        <i class="bi-trash btn text-danger" onclick="ShowModalByPost(this,'Pedido/GetDeleteModal', '<%= element.Id %>')"></i>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>
    <% } else{%>
        <p style="color: black;">Nenhum pedido cadastrada!</p>
    <% }%>
</div>