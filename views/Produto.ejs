<div class="d-flex justify-content-between p-2" >
    <h3 class="text-orangered">Produtos</h3>
    <button class="btn btn-primary" onclick="ShowModalByPost(this,'Produto/GetEditModal')">Novo</button>
</div>
<% if(Produtos && Produtos.length> 0) {%>
    <table style="overflow: hidden; table-layout: fixed;"  class="table table-white table-striped mt-2">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Ações</th>
        </thead>
        <tbody>
            <% Produtos.forEach(element=> {%>
                <tr>
                    <td>
                        <%= element.Id %>
                    </td>
                    <td  id="item_name_<%=element.Id %>">
                        <%= element.Nome %>
                    </td>
                    <td >
                        R$ <%= element.Preco.toFixed(2)%>
                    </td>
                    <td style=" overflow-wrap: unset; white-space: nowrap; overflow: hidden; text-overflow: '...'; " >
                        <%= element.Descricao %>
                    </td>
                    <td style="white-space: nowrap;">
                        <i class="bi-pen btn text-primary" onclick="ShowModalByPost(this,'Produto/GetEditModal', '<%= element.Id %>')"></i>
                        <i class="bi-trash btn text-danger" onclick="ShowModalByPost(this,'Produto/GetDeleteModal', '<%= element.Id %>')"></i>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <% } else{%>
        <p style="color: black;">Nenhum produto cadastrada!</p>
    <% }%>
    <div id="ModalContainer"></div>